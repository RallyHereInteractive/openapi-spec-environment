    "/v1/rank/{rank_id}": {
      "get": {
        "tags": [
          "rank"
        ],
        "summary": "Get Rank Config",
        "description": "Get rank configuration for specific rank id\n\nRequired Permissions: `rank:read:config`",
        "operationId": "get_rank_config",
        "parameters": [
          {
            "required": true,
            "schema": {
