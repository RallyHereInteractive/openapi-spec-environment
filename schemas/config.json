{
  "openapi": "3.0.2",
  "info": {
    "title": "config-api",
    "description": "Hi-Rez Studios config-api.",
    "version": "0.2.0"
  },
  "servers": [
    {
      "url": "/config"
    }
  ],
  "paths": {
    "/v1/app_settings/server": {
      "get": {
        "tags": [
          "config"
        ],
        "summary": "Get App Settings Server",
        "operationId": "get_app_settings_server",
